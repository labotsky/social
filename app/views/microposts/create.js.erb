$(".post .head").prepend("<%= j render('micropostlast', user:@people) %>");
$(".lastposts").fadeIn(1000);

$("a.fancybox").fancybox({
  'transitionIn'  : 'elastic',
  'transitionOut' : 'elastic',
  'speedIn'   : 600, 
  'speedOut'    : 200, 
  'overlayShow' : false
 });

$('#status_message_fake_text').val('');
$('#list').html('');

$('.post li').not('.head-post').mouseover(function(){
	$(this).find('.date_like').show();
	$(this).find('.close').show();
});

$('.post li').not('.head-post').mouseout(function(){
	$(this).find('.date_like').hide();
	$(this).find('.close').hide();
});

$('.head-post').mouseover(function(){
	$(this).find('.close').show();
});
$('.head-post').mouseout(function(){
	$(this).find('.close').hide();
});